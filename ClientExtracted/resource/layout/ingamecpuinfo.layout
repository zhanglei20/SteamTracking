"resource/layout/ingamecpuinfo.layout"
{
	controls
	{
		SeperatorFront { controlname=Label style="PerfSeperator" text=" | " }
		CPULabel { controlname=Label text="CPU " style="CPULabel" }
		CPUUtilization { controlname=Label text="0%" style="CPUUtilization" }
		CPUUtilizationSep { controlname=Label  text="" style="CPUUtilization" }
		CPUUtilizationMax { controlname=Label text="" style="CPUUtilization" }
		CPUSpeed { controlname=Label style="CPUSpeed" }
		CPUSpeedMax { controlname=Label style="CPUSpeed" }
		CPUSpeedUnits { controlname=Label style="CPUSpeed" }

		SeperatorBack { controlname=Label style="PerfSeperator" text=" | " }
	}

	styles
	{
		Label
		{
			font-family="Motiva"
		}

		CPULabel
		{
			font-weight="700"

			textcolor="218 218 100 255"
		}

		CPUUtilization
		{
			textcolor="220 220 220 255"
		}
	
		CPUSpeed
		{
			textcolor="190 190 190 255"
		}
	}
	
	layout
	{
		place { control="SeperatorFront,CPULabel,CPUUtilization,CPUUtilizationSep,CPUUtilizationMax,CPUSpeed,CPUSpeedMax,CPUSpeedUnits,SeperatorBack" dir="right" align="left-center" spacing=0 }
	}
}
