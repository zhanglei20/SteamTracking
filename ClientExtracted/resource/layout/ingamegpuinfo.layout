"resource/layout/ingameraminfo.layout"
{
	controls
	{
		GPULabel { controlname=Label text="GPU " style="GPULabel" }
		GPUUtilization { controlname=Label text="" style="GPUUtilization" }
		GPUTempSpace { controlname=Label text=" " style="GPUVRam" }
		GPUTemp { controlname=Label text="" style="GPUVRam" }
		GPUTempUnits { controlname=Label text="" style="GPUVRam" }
		VRAMUsed { controlname=Label text="" style="GPUVRam" }
		VRAMSep { controlname=Label  text="/" style="GPUVRam" }
		VRAMMax { controlname=Label text="" style="GPUVRam" }
		VRAMUnits { controlname=Label text="" style="GPUVRam" }

		SeperatorBack { controlname=Label style="PerfSeperator" text=" | " }
	}

	styles
	{
		Label
		{
			font-family="Motiva"
		}

		GPULabel
		{
			font-weight="700"

			textcolor="25 168 60 255"
		}

		GPUUtilization
		{
			textcolor="220 220 220 255"
		}

		GPUVRam
		{
			textcolor="190 190 190 255"
		}

		GPUVRamWarning
		{
			textcolor="218 100 100 255"
		}
		
		GPUVRamWarningDesaturated
		{
			textcolor="220 220 220 255"
		}

	}
	
	layout
	{
		place { control="GPULabel,GPUUtilization,GPUTempSpace,GPUTemp,GPUTempUnits,VRAMUsed,VRAMSep,VRAMMax,VRAMUnits,SeperatorBack" dir="right" align="left-center" spacing=0 }
	}
}
